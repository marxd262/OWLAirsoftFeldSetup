@page "/SpawnStadt"
@using OWLServer.Services
@inject ExternalTriggerService ExternalTriggerService
@inject GameStateService GameStateService
<PageTitle>SpawnStadt</PageTitle>

<Home TeamOnSide="@GameStateService.TeamInStadt"/>

@if ((!GameStateService.CurrentGame?.IsRunning ?? false) && (GameStateService.TeamSetReady))
{
    <RadzenToggleButton Text="@(GameStateService.WaldSpawnReady ? "BEREIT!" : "Bereit setzen")"
                        @bind-Value=@GameStateService.WaldSpawnReady
                        Change="@ToggleButtonClick"
                  
                        Size="ButtonSize.Large"
                        ButtonStyle="ButtonStyle.Danger"
                        ToggleButtonStyle="ButtonStyle.Success"
                        style="height: 120px;
                      width:150px; 
                      position: Absolute;
                      right: 1rem;
                      bottom: 1rem;"/>
}

@if ((GameStateService.CurrentGame?.IsRunning ?? false) && (GameStateService.CurrentGame?.ShowRespawnButton ?? false))
{
    <RadzenButton Text="Respawn"
                  Click="() => { ExternalTriggerService.InvokeKlickerPressed(GameStateService.TeamInStadt); }"
                  Size="ButtonSize.Large"
                  ButtonStyle="ButtonStyle.Danger"
                  style="height: 120px;
                      width:150px; 
                      position: Absolute;
                      right: 1rem;
                      bottom: 1rem;"/>
}